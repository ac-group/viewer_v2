<div class="mdl-layout mdl-js-layout mdl-color--grey-100">
    <main class="mdl-layout__content">
        <div class="demo-container mdl-grid">
            <div class="mdl-cell mdl-cell--4-col mdl-cell--hide-tablet mdl-cell--hide-phone"></div>

            <div class="mdl-card mdl-shadow--6dp">
                <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
                    <h2 class="mdl-card__title-text">{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</h2>
                </div>
                <div class="mdl-card__supporting-text">
                    <form action="{{ path('fos_user_registration_register') }}" method="POST" class="form-signin">

                      
                        <div class="mdl-textfield mdl-js-textfield">
                            {{ form_widget(form.username, { 'attr': {'class': 'mdl-textfield__input form-control', 'autofocus':'', 'placeholder':  'Логін користувача' } })}}
                            {{ form_label(form.username, null, { 'label_attr': {'class': 'mdl-textfield__label'} }) }}
                        </div>
                        <div class="mdl-textfield mdl-js-textfield">
                            {{ form_widget(form.email, { 'attr': {'class': 'mdl-textfield__input form-control', 'autofocus':'', 'placeholder':  'form.email'|trans({}, 'FOSUserBundle') } })}}
                            {{ form_label(form.email, null, { 'label_attr': {'class': 'mdl-textfield__label'} }) }}
                        </div>
                        <div class="mdl-textfield mdl-js-textfield">
                            {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'mdl-textfield__input form-control', 'autofocus':'', 'placeholder':  'form.password'|trans({}, 'FOSUserBundle') } })}}
                            {{ form_label(form.plainPassword.first, null, { 'label_attr': {'class': 'mdl-textfield__label'} }) }}
                        </div>
                        <div class="mdl-textfield mdl-js-textfield">
                            {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'mdl-textfield__input form-control', 'autofocus':'', 'placeholder':  'form.password_confirmation'|trans({}, 'FOSUserBundle') } })}}
                            {{ form_label(form.plainPassword.second, null, { 'label_attr': {'class': 'mdl-textfield__label'} }) }}
                        </div>

                        <div class="mdl-card__actions">    
                            <input type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" />
                        </div>    
                        {{ form_end(form) }}
                </div>

                <a href="{{ path("fos_user_security_login") }}" class="mdl-button">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
            </div>

        </div>
    </main>
</div>    