<div class="mdl-layout mdl-js-layout mdl-color--grey-100">
    <main class="mdl-layout__content">
        <div class="demo-container mdl-grid">
            <div class="mdl-cell mdl-cell--4-col mdl-cell--hide-tablet mdl-cell--hide-phone"></div>

            <div class="mdl-card mdl-shadow--6dp">
                <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
                    <h2 class="mdl-card__title-text">{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</h2>
                </div>
                <div class="mdl-card__supporting-text">
                    <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="form-signin">
                        <div class="mdl-textfield mdl-js-textfield">
                            {{ form_widget(form.company, { 'attr': {'class': 'mdl-textfield__input form-control', 'autofocus':'', 'placeholder':  'Назва підприємства' } }) }}
                            {{ form_label(form.company, null, { 'label_attr': {'class': 'mdl-textfield__label'} }) }}
                        </div>
                        <div class="mdl-textfield mdl-js-textfield">
                            {{ form_widget(form.edrpou, { 'attr': {'class': 'mdl-textfield__input form-control', 'autofocus':'', 'placeholder':  'ЕДРПОУ' } }) }}
                            {{ form_label(form.edrpou, null, { 'label_attr': {'class': 'mdl-textfield__label'} }) }}
                        </div>
                        <div class="mdl-textfield mdl-js-textfield">
                            {{ form_widget(form.companyaddress, { 'attr': {'class': 'mdl-textfield__input form-control', 'autofocus':'', 'placeholder':  'Адреса підприємства' } }) }}
                            {{ form_label(form.companyaddress, null, { 'label_attr': {'class': 'mdl-textfield__label'} }) }}
                        </div>
                        <div class="mdl-textfield mdl-js-textfield">
                            {{ form_widget(form.companyphone, { 'attr': {'class': 'mdl-textfield__input form-control', 'autofocus':'', 'placeholder':  'Телефон підприємства' } }) }}
                            {{ form_label(form.companyphone, null, { 'label_attr': {'class': 'mdl-textfield__label'} }) }}
                        </div>
                        <div class="mdl-textfield mdl-js-textfield">
                            {{ form_widget(form.companyemail, { 'attr': {'class': 'mdl-textfield__input form-control', 'autofocus':'', 'placeholder':  'E-mail підприємства' } }) }}
                            {{ form_label(form.companyemail, null, { 'label_attr': {'class': 'mdl-textfield__label'} }) }}
                        </div>
                        <div class="mdl-textfield mdl-js-textfield">
                            {{ form_widget(form.headname, { 'attr': {'class': 'mdl-textfield__input form-control', 'autofocus':'', 'placeholder':  'ПІБ керівника' } }) }}
                            {{ form_label(form.headname, null, { 'label_attr': {'class': 'mdl-textfield__label'} }) }}
                        </div>
                        
                        <div class="mdl-textfield mdl-js-textfield">
                            {{ form_widget(form.lastname, { 'attr': {'class': 'mdl-textfield__input form-control', 'autofocus':'', 'placeholder':  'Прізвище користувача' } }) }}
                            {{ form_label(form.lastname, null, { 'label_attr': {'class': 'mdl-textfield__label'} }) }}
                        </div>
                        <div class="mdl-textfield mdl-js-textfield">
                            {{ form_widget(form.firstname, { 'attr': {'class': 'mdl-textfield__input form-control', 'autofocus':'', 'placeholder':  'Імя користувача' } }) }}
                            {{ form_label(form.firstname, null, { 'label_attr': {'class': 'mdl-textfield__label'} }) }}
                        </div>
                        <div class="mdl-textfield mdl-js-textfield">
                            {{ form_widget(form.surname, { 'attr': {'class': 'mdl-textfield__input form-control', 'autofocus':'', 'placeholder':  'По-батькові користувача' } }) }}
                            {{ form_label(form.surname, null, { 'label_attr': {'class': 'mdl-textfield__label'} }) }}
                        </div>
                        <div class="mdl-textfield mdl-js-textfield">
                            {{ form_widget(form.userinn, { 'attr': {'class': 'mdl-textfield__input form-control', 'autofocus':'', 'placeholder':  'ІНН користувача' } }) }}
                            {{ form_label(form.userinn, null, { 'label_attr': {'class': 'mdl-textfield__label'} }) }}
                        </div>                        
                        <div class="mdl-textfield mdl-js-textfield">
                            {{ form_widget(form.username, { 'attr': {'class': 'mdl-textfield__input form-control', 'autofocus':'', 'placeholder':  'Логін користувача' } })}}
                            {{ form_label(form.username, null, { 'label_attr': {'class': 'mdl-textfield__label'} }) }}
                        </div>
                        <div class="mdl-textfield mdl-js-textfield">
                            {{ form_widget(form.email, { 'attr': {'class': 'mdl-textfield__input form-control', 'autofocus':'', 'placeholder':  'form.email'|trans({}, 'FOSUserBundle') } })}}
                            {{ form_label(form.email, null, { 'label_attr': {'class': 'mdl-textfield__label'} }) }}
                        </div>
                        <div class="mdl-textfield mdl-js-textfield">
                            {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'mdl-textfield__input form-control', 'autofocus':'', 'placeholder':  'form.password'|trans({}, 'FOSUserBundle') } })}}
                            {{ form_label(form.plainPassword.first, null, { 'label_attr': {'class': 'mdl-textfield__label'} }) }}
                        </div>
                        <div class="mdl-textfield mdl-js-textfield">
                            {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'mdl-textfield__input form-control', 'autofocus':'', 'placeholder':  'form.password_confirmation'|trans({}, 'FOSUserBundle') } })}}
                            {{ form_label(form.plainPassword.second, null, { 'label_attr': {'class': 'mdl-textfield__label'} }) }}
                        </div>

                        <div class="mdl-card__actions">    
                            <input type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" />
                        </div>    
                        {{ form_end(form) }}
                </div>

                <a href="{{ path("fos_user_security_login") }}" class="mdl-button">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
            </div>

        </div>
    </main>
</div>    